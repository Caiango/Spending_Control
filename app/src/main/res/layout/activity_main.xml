<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txTitle"
        android:layout_width="138dp"
        android:layout_height="79dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Spending Control"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txSaldo"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="SALDO"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewIni" />

    <Button
        android:id="@+id/btGanho"
        android:layout_width="118dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/botao_form"
        android:text="Ganhos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txSaldo" />

    <Button
        android:id="@+id/btGasto"
        android:layout_width="116dp"
        android:layout_height="62dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/botao_form"
        android:text="Despesas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txSaldo" />

    <ImageView
        android:id="@+id/imageViewIni"
        android:layout_width="250dp"
        android:layout_height="194dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txTitle"
        app:srcCompat="@mipmap/balanca3_foreground"
        tools:srcCompat="@mipmap/balanca3_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>